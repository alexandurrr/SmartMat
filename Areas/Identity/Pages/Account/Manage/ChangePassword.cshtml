@page
@model ChangePasswordModel
@{
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="mainDiv container bg-light shadow-lg rounded overflow-hidden" style="width: 50em;">
    <div>
        <a asp-area="Identity" asp-page="/Account/Manage/Index" class="previous align-top" 
           style="background-color: #f1f1f1; color: black; font-size: 15px; text-decoration: none">Tilbake til profilen</a>
    </div>
    <div class="text-lg-center mb-3">
        <h2 class="modal-title">Bytt passord</h2></div>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form id="change-password-form" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.OldPassword" class="font-weight-bold"></label>
                    <input asp-for="Input.OldPassword" class="form-control"/>
                    <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.NewPassword" class="font-weight-bold"></label>
                    <input asp-for="Input.NewPassword" class="form-control"/>
                    <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword" class="font-weight-bold"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control"/>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary mt-2">Oppdater passord</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}