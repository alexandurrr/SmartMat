@using smartmat.Data
@using Microsoft.AspNetCore.Identity
@model smartmat.Models.Recipe

@{
    ViewData["Title"] = Model.Title;
}

<h1>@Model.Title</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Introduction)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Introduction)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ingredients)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ingredients)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Instructions)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Instructions)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nutrients)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nutrients)
        </dd>
        <dt class="col-sm-2">
              <img alt="Recipe Image" src="@Model.ImagePath">
              </dt>
         
    </dl>
</div>
<div>
    @inject UserManager<ApplicationUser> _userManager;
    @{ var user = await _userManager.GetUserAsync(User); }
    @if (Model.ApplicationUser == user)
    {
        const string s = "|";
        <a asp-action="Edit" asp-route-id="@Model.Id">Rediger</a> @s
    }
    
    <a asp-action="Index">Se alle oppskrifter</a>
</div>
