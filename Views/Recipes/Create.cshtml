@model smartmat.Models.RecipeImageViewModel 

@{
    ViewData["Title"] = "Ny Oppskrift";
}

<partial name="_ProfilePartial"/>
<div class="mainDiv container-fluid bg-light shadow rounded" id="newRecipe">
    <h2 class="standaloneHeader font-weight-bold">Ny Oppskrift</h2>
    <hr />
    <form asp-action="Create" enctype="multipart/form-data">
        <div class="px-4 pt-0 pb-4 cover" id="inputForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label pb-2"></label>
                <input asp-for="Title" class="form-control" placeholder="eks: Taco"/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Introduction" class="control-label pb-2"></label>
                <input asp-for="Introduction" class="form-control" placeholder="eks: en kjapp målrett som er næringsrik og kun bruker 30min til å lages"/>
                <span asp-validation-for="Introduction" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ingredients" class="control-label pb-2"></label>
                <textarea asp-for="Ingredients" class="form-control" placeholder="eks. egg, melk, kjøtt osv."></textarea>
                <span asp-validation-for="Ingredients" class="text-danger"></span>
            </div>
            <div class="boxes row justify-content-lg-center">
                <div class="form-group column">
                    <label asp-for="Category" class="control-label"></label>
                    <select asp-for="Category" name="Category" id="Category">
                        <option value="Frokost">Frokost</option>
                        <option value="Middag" selected>Middag</option>
                        <option value="Lunsj">Lunsj</option>
                        <option value="Dessert">Dessert</option>
                        <option value="null">Annet</option>
                    </select>
                    <span asp-validation-for="Category" class="category text-danger column"></span>
                </div>
                <div class="form-check form-check-inline column">
                    <label asp-for="Glutenfree" class="control-label"></label>
                    <input asp-for="Glutenfree" class="form-check-input"/>
                    <span asp-validation-for="Glutenfree" class="text-danger"></span>
                </div>
                <div class="form-check form-check-inline column">
                    <label asp-for="Vegetarian" class="control-label"></label>
                    <input asp-for="Vegetarian" class="form-check-input"/>
                    <span asp-validation-for="Vegetarian" class="text-danger"></span>
                </div>
            </div>
            <div class="recipeImg form-group justify-content-lg-center">
                <div class="custom-file">
                    <label asp-for="Image">Inkluder et bilde av oppskriften</label>
                    <input asp-for="Image" accept=".png,.jpg,.jpeg">
                </div>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nutrients" class="control-label pb-2"></label>
                <input asp-for="Nutrients" class="form-control" placeholder="eks: salt, jern, kalsium osv."/>
                <span asp-validation-for="Nutrients" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Instructions" class="control-label pb-2"></label>
                <textarea asp-for="Instructions" class="form-control"></textarea>
                <span asp-validation-for="Instructions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Time" class="control-label pb-2">Tilberedningstid i minutter</label>
                <input asp-for="Time" class="time form-control"/>
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Visibility" class="control-label"></label>
                <select asp-for="Visibility" name="visibility" id="visibility">
                    <option value="public" selected>Offentlig</option>
                    <option value="private">Privat</option>
                </select>
                <span asp-validation-for="Visibility" class="text-danger"></span>
                <br><br>
            </div>
            <div class="form-group">
                <input type="submit" value="Opprett" class="btn btn-primary text-dark"/>
            </div>
        </div>
    </form>
</div>
