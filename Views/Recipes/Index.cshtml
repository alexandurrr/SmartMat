@model IEnumerable<smartmat.Models.Recipe>

@{
    ViewData["Title"] = "Alle Oppskrifter";
}

<h1>Alle Oppskrifter</h1>

<p>
    <a asp-action="Create">Lag ny oppskrift</a>
</p>
<table class="table">
