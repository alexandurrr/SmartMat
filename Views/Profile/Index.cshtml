@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="container-fluid">
    <form asp-action="Index" method="post">
        <div class="navBar bg-dark rounded" id="mealNav">
            <ul class="d-flex p-3 nav justify-content-md-between">
                <li class="nav-item">
                    <a class="nav-link" href="#">MEST POPULÆRT</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">SPIS SUNT</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">RASK MAT</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">FROKOST</a>
                </li>                
                <li class="nav-item">
                    <a class="nav-link" href="#">LUNSJ</a>
                </li>                    
                <li class="nav-item">
                    <a class="nav-link" href="#">MIDDAG</a>
                </li>                    
                <li class="nav-item">
                    <a class="nav-link" href="#">KVELDSMAT</a>
                </li>                    
                <li class="nav-item">
                    <a class="nav-link" href="#">GLUTENFRI</a>
                </li>
            </ul> 
        </div>
        
        <partial name="_ProfilePartial" />
        
        <div class="mainDiv container bg-light shadow rounded overflow-hidden">
            <div class="px-4 pt-0 pb-4 cover">
                <div id="profile-container" class="card-img-overlay-top">
                    <img id="profileImg" src="https://thumbs.dreamstime.com/b/happy-chef-logo-cooking-restaurant-food-symbol-194682894.jpg" alt="" class="rounded-circle img-thumbnail"/>
                </div>
                <input id="imgUpload" type="file" name="profile_photo" placeholder="Photo" required="" capture="user">
            
                <div class="profileHead text-lg-left">
                    <h1>Hei, Marah!</h1>
                    <p class="text-brown" style="color: saddlebrown;">Din matscore</p>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star"></span>
                    <span class="fa fa-star"></span>
                    <span class="fa fa-star"></span>

                    <div class="text-justify mt-5" id="personal-data">
                        <h6>Personlige opplysninger</h6>
                    </div>
                    <div id="inputForm">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="FirstName">Fornavn</label>
                                <input type="text" class="form-control" id="FirstName" placeholder="">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="LastName">Etternavn</label>
                                <input type="text" class="form-control" id="LastName" placeholder="">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="Email">Epost</label>
                            <input type="email" class="form-control" id="Email" placeholder="">
                        </div>
                        <div class="form-text">
                            <label for="userInfo">Litt om deg</label>
                            <textarea type="text" class="form-control" id="userInfo" placeholder="" style="height: 100%; letter-spacing: 1px; white-space: pre-wrap;"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Lagre</button>
                    </div>
                
                    <div class="text-justify mt-5" id="password-change">
                        <h6>Bytt passord</h6>
                    </div>
                    <div id="inputForm">
                        <div class="form-group">
                            <label for="CurrentPassword">Nåværende passord</label>
                            <input type="password" class="form-control" id="CurrentPassword" placeholder="">
                        </div>                    
                        <div class="form-group">
                            <label for="NewPassword">Ny passord</label>
                            <input type="password" class="form-control" id="NewPassword" placeholder="">
                        </div>                    
                        <div class="form-group">
                            <label for="RePassword">Gjenta passord</label>
                            <input type="password" class="form-control" id="RePassword" placeholder="">
                        </div>
                        <button type="submit" class="btn btn-primary">Lagre</button>
                    </div>
                
                    <div class="text-justify mt-5" id="activity-reminder">
                        <h6>Aktivitets påminnelser</h6>
                    </div>
                    <div id="inputForm">
                        <div class="custom-control custom-checkbox">
                          <input type="checkbox" class="custom-control-input" id="activityReminder">
                          <label class="custom-control-label font-weight-bold" for="activityReminder">Jeg ønsker å motta nyhetsbrev og varsler på epost.</label>
                        </div>
                        <button type="submit" class="btn btn-primary">Lagre</button>
                    </div>
                    </div>
            </div>
        </div>
    </form>
</div>