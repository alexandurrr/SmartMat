@using Microsoft.AspNetCore.Identity
@using smartmat.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Profile" asp-action="Index">Min Side</a></li>
    <li class="nav-item">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new {area = ""})">
            <button type="submit" style="border: none;" class="nav-link btn btn-link text-dark">Logg ut</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark btn btn-primary" asp-area="Identity" asp-page="/Account/Register">Registrer</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark btn btn-primary" asp-area="Identity" asp-page="/Account/Login">Logg inn</a>
    </li>
}