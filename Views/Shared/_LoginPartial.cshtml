@using Microsoft.AspNetCore.Identity
@using smartmat.Data
@inject SignInManager<ApplicationUser> _signInManager
@inject UserManager<ApplicationUser> _userManager

@if (_signInManager.IsSignedIn(User))
{
    
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index">Min Side</a>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new {area = ""})">
            <button type="submit" style="border-radius: 2em; padding: 0.5em 1em;" class="nav-link btn btn-link text-dark">Logg ut</button>
        </form>
    </li>
    <input type="checkbox" id="darkModeSelector"/>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark btn btn-primary" asp-area="Identity" asp-page="/Account/Register">Registrer</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark btn btn-primary" asp-area="Identity" asp-page="/Account/Login">Logg inn</a>
    </li>
}